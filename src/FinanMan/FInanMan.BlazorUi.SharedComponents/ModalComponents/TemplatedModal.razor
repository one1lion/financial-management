@using FinanMan.BlazorUi.SharedComponents.Card
<Modal Show=Show ShowChanged=ShowChanged ShowDismiss=ShowDismiss>
    <Card>
        @if (ModalHeader is not null)
        {
            <CardHeader>
                @ModalHeader
            </CardHeader>
        }
        <CardBody>
            <CardText>
                @ModalContent
            </CardText>
        </CardBody>
        @if (ModalFooter is not null)
        {
            <CardFooter>
                @ModalFooter
            </CardFooter>
        }
    </Card>
</Modal>


